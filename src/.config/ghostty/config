
term = xterm-256color
theme = Gruvchad

confirm-close-surface = false
font-thicken = true
font-size = 11

gtk-wide-tabs = false
adw-toolbar-style = flat

window-decoration = none

# keybinds
keybind = alt+enter=new_tab
keybind = alt+q=close_tab
keybind = alt+b=new_split:down
keybind = alt+v=new_split:right
keybind = alt+q=close_surface
keybind = alt+r=reload_config

keybind = alt+h=goto_split:left
keybind = alt+j=goto_split:down
keybind = alt+k=goto_split:up
keybind = alt+l=goto_split:right

keybind = alt+f=toggle_split_zoom

keybind = alt+ctrl+h=resize_split:left,10
keybind = alt+ctrl+j=resize_split:down,10
keybind = alt+ctrl+k=resize_split:up,10
keybind = alt+ctrl+l=resize_split:right,10

keybind = global:alt+grave_accent=toggle_quick_terminal

keybind = alt+\=reset_font_size
